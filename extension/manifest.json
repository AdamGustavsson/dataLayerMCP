{
  "manifest_version": 3,
  "name": "MCP DataLayer Access",
  "version": "1.0",
  "description": "Access dataLayer, GA4 hits, Meta Pixel hits, and GTM preview data for MCP tools",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "tabs",
    "webRequest"
  ],
  "host_permissions": [
    "<all_urls>",
    "https://www.google-analytics.com/*",
    "https://analytics.google.com/*",
    "https://region1.google-analytics.com/*",
    "https://region1.analytics.google.com/*",
    "https://www.facebook.com/*",
    "https://tagassistant.google.com/*"
  ],
  "background": {
    "service_worker": "service_worker.js"
  },
  "content_scripts": [],
  "action": {
    "default_popup": "popup.html",
    "default_title": "MCP DataLayer Access"
  },
  "web_accessible_resources": []
} 